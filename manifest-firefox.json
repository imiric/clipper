{
  "manifest_version": 3,
  "name": "Org Clipper",
  "version": "0.1.0",
  "description": "Copies page title and URL in Org format",
  "author": "Ivan MiriÄ‡",
  "homepage_url": "https://github.com/imiric/org-clipper",
  "permissions": ["activeTab", "clipboardWrite", "scripting", "storage"],
  "action": {
    "default_title": "Copy page title and URL in Org Format",
    "default_icon": {
      "16": "images/icon16.png",
      "24": "images/icon24.png",
      "32": "images/icon32.png"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+O"
      },
      "description": "Copy page title and URL in Org format"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "org-clipper@imiric"
    }
  }
}
